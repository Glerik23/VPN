# ============================================
# Конфигурация VPN-сервера
# Скопируй этот файл в .env и заполни значения
# cp .env.example .env
# ============================================

# --- Сервер ---
SERVER_IP=YOUR_SERVER_IP
SSH_PORT=2222
ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --- 3x-ui Панель ---
XUI_PORT=2053
XUI_USERNAME=admin
XUI_PASSWORD=CHANGE_ME_STRONG_PASSWORD
ADGUARD_PORT=3865

# --- VLESS + REALITY ---
VLESS_PORT=443
# SNI для REALITY — выбери популярный сайт на том же хостинге/рядом
# Хорошие варианты: www.microsoft.com, www.google.com, dl.google.com, www.samsung.com
REALITY_SNI=www.microsoft.com
REALITY_SERVER_NAME=www.microsoft.com
# Автоматически генерируется скриптом 04-generate-keys.sh:
REALITY_PRIVATE_KEY=
REALITY_PUBLIC_KEY=
REALITY_SHORT_ID=
VLESS_UUID=

# --- Telegram Bot (Monitoring & Backups) ---
TG_BOT_TOKEN=
TG_CHAT_ID=

# --- Panel & AdGuard Credentials ---
USERNAME=admin
PASSWORD=admin

# --- Hysteria 2 ---
HYSTERIA_PORT=443
HYSTERIA_PASSWORD=
# Подсказки по пропускной способности (Мбит/с) — установи по мощности сервера
HYSTERIA_UP_MBPS=100
HYSTERIA_DOWN_MBPS=100

# --- Fail2ban ---
F2B_MAXRETRY=3
F2B_BANTIME=3600

# --- Бэкап ---
BACKUP_DIR=/root/vpn-backups
